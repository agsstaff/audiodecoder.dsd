<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="audiodecoder.dsd"
  version="1.0.0"
  name="DSD Audio Decoder"
  provider-name="spiff">
  <requires>
    <import addon="kodi.audiodecoder" version="1.0.0"/>
  </requires>
  <extension
    point="kodi.audiodecoder"
    name="dsd"
    extension=".dff|.dsf"
    mimetype="application/x-dff|application/x-dsf"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">DSD (DSF/DFF) Audio Decoder</summary>
    <description lang="en">DSD (DSF/DFF) Audio Decoder</description>
    <platform>@PLATFORM@</platform>
  </extension>
</addon>
